@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row ">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Product List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-2">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Add new Product
                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped bg-body">
            <thead>
                <tr align="center">
                    <th>
                        Car Brand
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Driven Kilometres
                    </th>
                    <th>
                        Power in KiloWatts
                    </th>
                    <th>
                        Year of Construction
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Brand
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.KilometresDriven
                        </td>
                        <td>
                            @obj.PowerInKilowatts
                        </td>
                        <td>
                            @obj.YearOfConstruction
                        </td>
                        <td>
                            @obj.Category.Name
                        </td>

                        <td>
                            @obj.Description
                        </td>

                        <td>
                            <div class="w-auto btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-auto">
                                    <i class="bi bi-pencil-square"> Edit</i>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="w-auto btn-group" role="group">
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-auto">
                                    <i class="bi bi-trash3-fill"> Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    </div>

